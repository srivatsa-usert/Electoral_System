    <!-- Script to get candidates info -->
    <script>
        // Function to fetch candidate list using AJAX
        function fetchCandidateList() {
            $.ajax({
                url: "getCandidateList?status=all",
                type: "GET",
                dataType: "json",
                success: function(response) {
                    // Clear existing table rows
                    $("#candidatesTable tbody").empty();

                    $.each(response, function(index, candidate) {
                        let statusText = getStatusText(candidate.status); // Get the status text based on the status value

                        let row = "<tr class='bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600'>" +
                            "<th scope='row' class='px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white'>" + candidate.name + "</th>" +
                            "<td class='px-6 py-4'>" + candidate.registrationNumber + "</td>" +
                            "<td class='px-6 py-4'>" + candidate.position + "</td>" +
                            "<td class='px-6 py-4'>" + statusText + "</td>" +
                            "<td class='px-6 py-4'>" + candidate.category + "</td>" +
                            "<td class='px-6 py-4'>" + candidate.department + "</td>" +
                            "<td class='px-6 py-4'>" + candidate.subject + "</td>" +
                            "<td class='px-6 py-4'>" + candidate.course + "</td>" +
                            "</tr>";
                        $("#candidatesTable tbody").append(row);
                    });

                    function getStatusText(status) {
                        if (status === "1") {
                            return "File Nomination Form Submitted";
                        } else if (status === "2") {
                            return "Enclosures Uploaded";
                        } else if (status === "3") {
                            return "Proposer & Seconder Accepted";
                        } else if (status === "3.5") {
                            return "Rejected by Proposer or Seconder";
                        } else if (status === "4") {
                            return "Dean Approved";
                        } else if (status === "4.5") {
                            return "Dean Rejected";
                        } else if (status === "5") {
                            return "EC Accepted";
                        } else if (status === "5.5") {
                            return "EC Rejected";
                        } else if (status === "-1") {
                            return "Nomination Withdrawn";
                        } else {
                            return "Unknown Status";
                        }
                    }


                },
                error: function(xhr, status, error) {
                    console.error("Error fetching candidate list: " + error);
                }
            });
        }

        // Call the function on page load
        $(document).ready(function() {
            fetchCandidateList();
        });
    </script>
